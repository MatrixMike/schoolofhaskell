body {
  font-family: "Lato", sans-serif;
}

#react-container > div {
  margin-left: auto;
  margin-right: auto;
  width: 800px;
}

.snippet {
  font-family: 'Ubuntu', sans-serif;
  width: 800px;
  /* same background color as the editor theme */
  background: #fff;
  border: 1px solid #d1d1d1;
  position: relative;
  border-radius: 0.2em;
  margin: 0.25em 0 0.75em 0;
/*  min-height: 2.5em; */
  > .ace_editor {
    margin: 0.25em;
    height: 300px;
  }
  .ace_editor {
    font-size: 15px !important;
  }
  > .controls {
    width: 100%;
    margin-top: -0.25em;
  }
  .controls-bar {
    border-top: 1px solid #d1d1d1;
    border-bottom: 1px solid #d1d1d1;
    overflow: hidden;
  }
  .run {
    cursor: pointer;
  }
  /* glyphicon-play */
  .run:before {
    content: "\e072";
  }
  .run:hover {
    background-color: #eee;
  }
  /*
  .run:hover {
    color: #a55;
  }
  .run:active {
    color: #c33;
    text-shadow: 0px 0px 7px #CB413D;
  }
  */
  .tab {
    cursor: pointer;
    display: block;
    float: left;
    height: 100%;
    color: #655;
  }
  .tab:hover {
    background-color: #f1f1f1;
  }
  .tab.tab-focused {
    background-color: #e1e1e1;
    /* rounded tab?
    background-color: white;
    border-bottom: 1px solid white;
    border-left: 1px solid #d1d1d1;
    border-right: 1px solid #d1d1d1;
    position: relative;
    top: 1px;
    border-radius: 0.5em 0.5em 0 0;
     */
  }
  /* TODO: make it resizable */
  .tab-content {
    height: 20em;
    display: none;
  }
  .tab-content-focused {
    display: block;
  }
  .type-popup {
    position: absolute;
    border: 1px solid #d1d1d1;
    border-radius: 0.4em;
    padding: 0.4em;
    max-width: 50%;
    .type-info {
      padding-bottom: 0.2em;
      border-bottom: 1px dashed #d1d1d1;
      margin-bottom: 0.2em;
    }
    .type-info:last-child {
      padding-bottom: 0;
      border-bottom: none;
      margin-bottom: 0;
    }
  }
  .highlighted-haskell {
    font-size: 15px !important;
    white-space: pre-wrap;
  }
  .docs-link:hover {
    cursor: pointer;
    text-decoration: underline;
  }
  .hide-mark {
    display: none;
  }
}

.snippet.never-built {
  .run {
    -webkit-transition: opacity 0.5s ease-in-out;
    -moz-transition: opacity 0.5s ease-in-out;
    -o-transition: opacity 0.5s ease-in-out;
    transition: opacity 0.5s ease-in-out;
    opacity: 0.5;
    position: relative;
    top: -1.6em;
  }
}

.snippet.built {
  .run {
    padding-top: 0.2em;
  }
}

.snippet.never-built:hover {
  .run {
    opacity: 1;
  }
}

.snippet.building {
  .run:hover, .run:active {
    text-shadow: none;
  }
  /* glyphicon-cog */
  .run:before {
    content: "\e019";
  }
}

/* Sizing + positioning of run button and tabs */
.snippet {
  .build-tab {
    float: right;
  }
  .run {
    float: right;
    height: 100%;
    font-size: 150%;
    padding: 0.3em 0.3em 0.3em 0.4em;
    /* glyphicon sets to 1px, unset */
    top: 0;
  }
  .tab {
    font-size: 120%;
    padding: 0.2em 0.7em;
  }
  .controls-bar {
    height:  2.3em;
  }
}

.build-tab-content {
  overflow: auto;
  .message {
    padding: 0.25em 0.25em 0.25em 0.5em;
    border-bottom: 0.05em solid #ccc;
    min-height: 1.5em;
  }
  .kind-error {
    color: #b94a48;
  }
  .kind-warning {
    color: #9a7a43;
    background: #fcf8e3;
    border-bottom: 0.05em solid #efeace;
  }
  .kind-warning {
    background: #f1eed9;
  }
  .error-span {
    cursor: pointer;
    text-decoration: underline;
  }
  .error-msg {
    padding-left: 0.5em;
    white-space: pre-wrap;
    font-family: 'Ubuntu Mono', monospace;
  }
  .msg-ann-refactor, .msg-ann-code {
    padding: 0.1em 0.5em;
    border: 1px solid #ddd;
    border-radius: 0.2em;
  }
  .msg-ann-collapse {
    font-size: 200%;
    line-height: 0;
    position: relative;
    top: -0.1em;
  }
  .msg-ann-collapse:before {
    content: " â€¦";
  }
}

.console-tab-content {
  overflow: auto;
}

.docs-tab-content {
  /* This is a hack to make the parent window not scroll when the iframe
   *  anchor is updated.
   */
  display: block !important;
  position: fixed;
  visibility: hidden;
  iframe {
    border: none;
    width: 100%;
    height: 100%;
  }
}

.docs-tab-content.tab-content-focused {
  position: initial;
  visibility: visible;
}

.tab, .run {
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -o-user-select: none;
  user-select: none;
}
